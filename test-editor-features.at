// Type aliases (new in v0.4.0)
type UserId = int;
type Score = int;

// Union types (new in v0.4.0)
type Result = Ok(int) | Err(int);

// Trait definition (new in v0.4.0)
trait Display {
    fn to_string(self: Point) -> int;
}

// Struct
struct Point {
    x: int,
    y: int,
}

// Trait implementation (new in v0.4.0)
impl Display for Point {
    fn to_string(self: Point) -> int {
        print("Point({}, {})", self.x, self.y);
        return 0;
    }
}

// Generic function (new in v0.4.0)
fn max<T>(a: T, b: T) -> T {
    if a > b {
        return a;
    }
    return b;
}

// Regular function
fn calculate_distance(p1: Point, p2: Point) -> int {
    let dx = p2.x - p1.x;
    let dy = p2.y - p1.y;
    return dx * dx + dy * dy;
}

// Main function
fn main() {
    print("=== Testing Athōn Editor Features ===");
    print("");
    
    // Type aliases
    let user_id = 42;
    let score = 100;
    print("User ID: {}, Score: {}", user_id, score);
    
    // Structs
    let p1 = Point { x: 0, y: 0 };
    let p2 = Point { x: 3, y: 4 };
    
    // Function calls
    let dist = calculate_distance(p1, p2);
    print("Distance: {}", dist);
    
    // Trait methods
    to_string(p1);
    
    print("");
    print("✓ All features working!");
}
