{
  "name": "athon-language",
  "displayName": "Athōn Language Support",
  "description": "Complete language support for Athōn: syntax highlighting, snippets, formatting, and more",
  "version": "0.4.0",
  "publisher": "athon-lang",
  "icon": "icons/athon-logo.png",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "keywords": [
    "athon",
    "systems programming",
    "capability-secure",
    "compiler",
    "bootstrap",
    "type system",
    "traits",
    "generics"
  ],
  "galleryBanner": {
    "color": "#2E7D32",
    "theme": "dark"
  },
  "extensionDependencies": [],
  "extensionPack": [],
  "contributes": {
    "languages": [
      {
        "id": "athon",
        "aliases": [
          "Athōn",
          "athon"
        ],
        "extensions": [
          ".at"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/athon-file.svg",
          "dark": "./icons/athon-file.svg"
        }
      }
    ],

    "grammars": [
      {
        "language": "athon",
        "scopeName": "source.athon",
        "path": "./syntaxes/athon.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "athon",
        "path": "./snippets/athon.json"
      }
    ],
    "commands": [
      {
        "command": "athon.format",
        "title": "Format Document",
        "category": "Athōn"
      }
    ],
    "configuration": {
      "title": "Athōn",
      "properties": {
        "athon.formatOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically format Athōn files on save"
        },
        "athon.indentSize": {
          "type": "number",
          "default": 4,
          "description": "Number of spaces for indentation"
        },
        "athon.formatterPath": {
          "type": "string",
          "default": "",
          "description": "Path to athon-format.py (leave empty for auto-detection)"
        }
      }
    }
  },
  "main": "./extension.js",
  "activationEvents": [
    "onLanguage:athon"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/beamitpal/athon"
  },
  "bugs": {
    "url": "https://github.com/beamitpal/athon/issues"
  },
  "homepage": "https://github.com/beamitpal/athon#readme",
  "license": "SEE LICENSE IN LICENSE",
  "scripts": {
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@vscode/vsce": "^2.32.0"
  }
}
